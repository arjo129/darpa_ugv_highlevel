<!-- 
  This node converts the /lwheel and /rwheel wheel encoder values to odometery. Note that
  the smaller wheel ticks are calculated in arduino mega node and lwheel increases by 1 (cm)
  for every 37 ticks.
-->

<launch>

  <node pkg="differential_drive" type="diff_tf.py" name="tgv_wheel_odom" output="screen">

    <param name="~rate" value="30"/>                 # The rate at which the tf and odom messages are published (Hz).
    <param name="ticks_meter" value="100" />              
    <param name="~base_width" value="0.55" />         # The robot's wheel base in meters.
    <param name="~base_frame_id" value="base_link"/>            
    <param name="~odom_frame_id" value="odom" />                
    <param name="encoder_min" value="100000" /> 
    <param name="encoder_max" value="-100000"/>               
    <!--  <param name="wheel_low_wrap" value="100000" />                       
    <param name="wheel_high_wrap" value="200000" /> -->
  </node>
  
</launch>
