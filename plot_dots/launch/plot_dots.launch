<launch>

    <arg name="robot_name" default="X1" />
    <arg name="rviz" default="false" />
    
    <!--- Sim Time -->
    <param name="/use_sim_time" value="true" />


    <node pkg="plot_dots" type="dots_node" name="dots_node" output="screen" >
        <param name="world_frame" type="string" value="map" />
    </node>

    <group if="$(arg rviz)">
        <node type="rviz" name="rviz" pkg="rviz" args="-d $(find plot_dots)/rviz/plot_dots.rviz" />
    </group>

</launch>